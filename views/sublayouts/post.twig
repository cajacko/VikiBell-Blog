<article class="Post u-clearFix" itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting" itemref="MicroData-person MicroData-organization">
  <header>
    <time class="Post-date" datetime="{{ post.date.datetime }}" itemprop="datePublished">{{ post.date.title }}</time>

    {% if post.image %}
      <a class="Post-headerLink" href="{{ post.url }}" itemprop="image" itemscope itemtype="https://schema.org/ImageObject">
        {% set image = post.image %}
        {% include 'sublayouts/image.twig' %}
        <meta class="Post-featuredImageUrl" itemprop="url" content="{{ post.image.src }}">
        <meta class="Post-featuredImageWidth" itemprop="width" content="{{ post.image.width }}">
        <meta class="Post-featuredImageHeight" itemprop="height" content="{{ post.image.height }}">
      </a>
    {% endif %}

    <a class="Post-headerLink" href="{{ post.url }}" itemprop="mainEntityOfPage">
      <{% if vars.title %}h3{% else %}h2{% endif %} class="Post-title" itemprop="headline">{{ post.title }}</{% if vars.title %}h3{% else %}h2{% endif %}>
    </a>
  </header>

  <div class="Post-content" itemprop="articleBody">
  {% if post.excerpt %}
    {{ post.excerpt|raw }}
  {% else %}
    {{ post.content|raw }}
  {% endif %}
  </div>

  <footer>
    <meta class="Post-dateModified" content="{{ post.dateModified }}" itemprop="dateModified">
    <meta class="Post-description" itemprop="description" content="{{ post.description }}">

    {% if vars.isSingle %}
      <div class="SharePost">
        <span class="SharePost-title">Share this post on:</span>

        <div class="SharePost-links">
          <ul class="SharePost-list">
            <li class="SharePost-item">
              <a class="SharePost-Twitter SharePost-link" href="https://twitter.com/intent/tweet?url={{ post.tweet.url }}&text={{ post.tweet.text }}&via={{ post.tweet.via }}" target="_blank">
                <svg class="SharePost-socialIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#twitter"></use></svg><svg class="SharePost-shareIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#share"></use></svg>
              </a>
            </li>
            <li class="SharePost-item">
              <a class="SharePost-Facebook SharePost-link" href="https://www.facebook.com/sharer/sharer.php?u={{ post.facebook.url }}" target="_blank">
                <svg class="SharePost-socialIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#facebook"></use></svg><svg class="SharePost-shareIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#share"></use></svg>
              </a>
            </li>
            <li class="SharePost-item">
              <a class="SharePost-Email SharePost-link" href="mailto:?subject={{ post.email.subject }}&body={{ post.email.content }}">
                <svg class="SharePost-socialIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#email"></use></svg><svg class="SharePost-shareIcon SharePost-icon" viewBox="0 0 100 100"><use xlink:href="#share"></use></svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    {% endif %}
  </footer>
</article>
