<!DOCTYPE html>
<html lang="en-GB" class="no-js{% if vars.config.environment.dev %} dev{% endif %}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">

    <link rel="apple-touch-icon" sizes="57x57" href="{{ vars.staticPublic }}/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ vars.staticPublic }}/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ vars.staticPublic }}/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ vars.staticPublic }}/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ vars.staticPublic }}/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ vars.staticPublic }}/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ vars.staticPublic }}/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ vars.staticPublic }}/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ vars.staticPublic }}/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="{{ vars.staticPublic }}/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ vars.staticPublic }}/android-chrome-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ vars.staticPublic }}/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ vars.staticPublic }}/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="{{ vars.staticPublic }}/manifest.json">
    <link rel="mask-icon" href="{{ vars.staticPublic }}/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="{{ vars.staticPublic }}/mstile-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <meta name="author" content="Viki Bell">
    <link rel="author" href="{{ vars.config.environment.url }}">
    <title>{{ vars.meta.title }}</title>

    {% for name, content in vars.meta.loop %}
      <meta {{ name|raw }} content="{{ content }}" />
    {% endfor %}

    {% if vars.canonical %}
      <link rel="canonical" href="{{ vars.config }}" />
    {% endif %}
    {% if vars.next %}<link rel="next" href="{{ vars.next }}" />{% endif %}
    {% if vars.prev %}<link rel="prev" href="{{ vars.prev }}" />{% endif %}
    <link rel="stylesheet" href="{{ vars.staticPublic }}{{ vars.config.styles.publicDir }}/{% if vars.config.environment.dev %}{{ vars.config.styles.main }}{% else %}{{ vars.config.styles.min }}{% endif %}">
    <script async src="{{ vars.staticPublic }}{{ vars.config.javascripts.publicDir }}/{% if vars.config.environment.dev %}{{ vars.config.javascripts.main }}{% else %}{{ vars.config.javascripts.min }}{% endif %}"></script>
  </head>

  <body itemscope itemtype="http://schema.org/WebPage">
    <div class="u-hide">{{ vars.icons|raw }}</div>
    <div id="MicroData-organization" itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
      <meta itemprop="name" content="Viki Bell">
      <meta itemprop="url" content="{{ vars.config.environment.url }}">

      {% for socialLink in vars.socialProfiles %}
        <link itemprop="sameAs" href="{{ socialLink }}" />
      {% endfor %}

      <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
        <meta itemprop="url" content="{{ vars.organizationLogo.src }}">
        <meta itemprop="width" content="{{ vars.organizationLogo.width }}">
        <meta itemprop="height" content="{{ vars.organizationLogo.height }}">
      </div>
    </div>

    <header id="SiteHeader" class="SiteHeader">
      {% include 'sublayouts/banner.twig' %}
      {% include 'sublayouts/site_navigation.twig' %}
    </header>
    
    <div class="Content u-wrap">
        <div class="Content--wrap">
            <main class="Main">
                {% if vars.pageTitle %}
                    <h1 class="Title">{{ vars.pageTitle }}</h1>
                {% endif %}

                {% if vars.breadcrumbs %}
                    <ul class="Breadcrumbs u-clearFix" role="navigation">
                      {% for title, url  in vars.breadcrumbs %}
                        <li class="Breadcrumbs-item" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                          <a class="Breadcrumbs-link" href="{{ url }}" itemprop="url">
                            <span class="Breadcrumbs-title" itemprop="title">{{ title }}</span>
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                {% endif %}