<!DOCTYPE html>
<html lang="en-GB" class="no-js{% if vars.config.environment.dev %} dev{% endif %}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">

    <meta name="author" content="Viki Bell">
    <link rel="author" href="{{ vars.config.environment.url }}">
    <title>{{ vars.meta.title }}</title>

    {% for name, content in vars.meta.loop %}
      <meta {{ name|raw }} content="{{ content }}" />
    {% endfor %}

    <link rel="canonical" href="{{ vars.config.environment.url }}" />
    {% if vars.next %}<link rel="next" href="{{ vars.next }}" />{% endif %}
    {% if vars.prev %}<link rel="prev" href="{{ vars.prev }}" />{% endif %}
    <link rel="stylesheet" href="{{ vars.config.styles.publicDir }}/{% if vars.config.environment.dev %}{{ vars.config.styles.main }}{% else %}{{ vars.config.styles.min }}{% endif %}">
    <script async src="{{ vars.config.javascripts.publicDir }}/{% if vars.config.environment.dev %}{{ vars.config.javascripts.main }}{% else %}{{ vars.config.javascripts.min }}{% endif %}"></script>
  </head>

  <body itemscope itemtype="http://schema.org/WebPage">
    <header id="SiteHeader" class="SiteHeader">
      {% include 'sublayouts/banner.twig' %}
      {% include 'sublayouts/site_navigation.twig' %}
    </header>
    
    <div class="Content u-wrap">
        <div class="Content--wrap">
            <main class="Main">
                {% if vars.pageTitle %}
                    <h1 class="Title">{{ vars.pageTitle }}</h1>
                {% endif %}

                {% if vars.breadcrumbs %}
                    <ul class="Breadcrumbs u-clearFix" role="navigation">
                      {% for title, url  in vars.breadcrumbs %}
                        <li class="Breadcrumbs-item" itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
                          <a class="Breadcrumbs-link" href="{{ url }}" itemprop="url">
                            <span class="Breadcrumbs-title" itemprop="title">{{ title }}</span>
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                {% endif %}